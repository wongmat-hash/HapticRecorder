<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Microphone Usage Description -->
    <key>NSMicrophoneUsageDescription</key>
    <string>This app needs access to the microphone for recording audio.</string>

    <!-- Audio File Document Type -->
    <key>CFBundleDocumentTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeName</key>
            <string>Audio File</string>
            <key>LSHandlerRank</key>
            <string>Owner</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.audio</string>
                <string>public.mp3</string>
                <!-- Add more audio types as needed -->
            </array>
        </dict>
    </array>
    
    <!-- Recording Permission -->
    <key>NSAppUsesRecordingPermission</key>
    <string>YES</string>

    <!-- Haptic Feedback Usage Description -->
    <key>NSHapticFeedbackUsageDescription</key>
    <string>Enable haptic feedback to simulate tactile sensations for a more immersive user experience.</string>

    <!-- File Provider Domain -->
    <key>NSFileProviderDomain</key>
    <array>
        <string>$(TeamIdentifierPrefix)com.yourcompany.appname</string>
        <!-- Replace with your actual team identifier prefix and app bundle identifier -->
    </array>

    <!-- File Sharing -->
    <key>UIFileSharingEnabled</key>
    <true/>

    <!-- UIApplicationSceneManifest -->
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <false/>
        <key>UISceneConfigurations</key>
        <dict>
            <key>UIWindowSceneSessionRoleApplication</key>
            <array>
                <dict>
                    <key>UISceneConfigurationName</key>
                    <string>Default Configuration</string>
                    <key>UISceneDelegateClassName</key>
                    <string>$(PRODUCT_MODULE_NAME).SceneDelegate</string>
                    <key>UISceneStoryboardFile</key>
                    <string>Main</string>
                </dict>
            </array>
        </dict>
    </dict>

    <!-- Other entries as needed -->

</dict>
</plist>
